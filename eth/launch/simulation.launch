<launch>

    <include file="$(find franka_moveit_config)/launch/planning_context.launch">
        <arg name="load_robot_description" value="true" />
    </include>
    <include file="$(find franka_moveit_config)/launch/move_group.launch">
        <arg name="publish_monitored_planning_scene" value="true" />
    </include>

    <include file="$(find franka_moveit_config)/launch/moveit_rviz.launch" >
        <arg name="rviz_config" value="$(find franka_moveit_config)/launch/moveit.rviz"/>
    </include>

    <node name="joint_state_desired_publisher" pkg="topic_tools" type="relay" args="franka_state_controller/joint_states franka_state_controller/joint_states_desired" />

</launch>